<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_layout.xsd">
    <update handle="1column" />

    <referenceBlock name="page.main.title">
        <action method="setPageTitle">
            <argument translate="true" name="title" xsi:type="string">Payment gateway redirection</argument>
        </action>
    </referenceBlock>

    <referenceBlock name="payzen_payment_redirect">
        <block class="Magento\Framework\View\Element\Template" as="redirect_loader" template="Lyranetwork_Payzen::payment/form/loader.phtml" />
    </referenceBlock>
</layout>