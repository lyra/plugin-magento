<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <group id="payzen_paypal" translate="label" sortOrder="7" showInDefault="1" showInWebsite="1" showInStore="1">
        <label><![CDATA[PAYPAL PAYMENT]]></label>
        <frontend_model>Lyranetwork\Payzen\Block\Adminhtml\System\Config\Fieldset\Dependant</frontend_model>
        <attribute type="expanded">0</attribute>
        <attribute type="feature">paypal</attribute>

        <group id="payzen_display_options" translate="label" type="text" sortOrder="71" showInDefault="1" showInWebsite="1" showInStore="1">
            <label><![CDATA[BASIC SETTINGS]]></label>
            <frontend_model>Magento\Config\Block\System\Config\Form\Fieldset</frontend_model>

            <field id="active" translate="label comment" type="select" sortOrder="711" showInDefault="1" showInWebsite="1" showInStore="1">
                <label><![CDATA[Activation]]></label>
                <comment><![CDATA[Enables / disables this payment method.]]></comment>
                <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                <config_path>payment/payzen_paypal/active</config_path>
            </field>

            <field id="title" translate="label comment" type="text" sortOrder="712" showInDefault="1" showInWebsite="1" showInStore="1">
                <label><![CDATA[Method title]]></label>
                <comment><![CDATA[Method title to display on payment means page.]]></comment>
                <config_path>payment/payzen_paypal/title</config_path>
            </field>

            <field id="sort_order" translate="label comment" type="text" sortOrder="713" showInDefault="1" showInWebsite="1" showInStore="1">
                <label><![CDATA[Sort order]]></label>
                <comment><![CDATA[In the payment methods list.]]></comment>
                <config_path>payment/payzen_paypal/sort_order</config_path>
            </field>

            <field id="module_logo" translate="label comment" type="image" sortOrder="714" showInDefault="1" showInWebsite="1" showInStore="1">
                <label><![CDATA[Logo]]></label>
                <comment><![CDATA[Allowed file types: jpeg, gif, png.]]></comment>
                <config_path>payment/payzen_paypal/module_logo</config_path>
                <backend_model>Lyranetwork\Payzen\Model\System\Config\Backend\Logo</backend_model>
                <upload_dir config="system/filesystem/media" scope_info="0">payzen/images</upload_dir>
                <base_url type="media" scope_info="0">payzen/images</base_url>
            </field>
        </group>

        <group id="payzen_restrictions" translate="label" type="text" sortOrder="72" showInDefault="1" showInWebsite="1" showInStore="1">
            <label><![CDATA[RESTRICTIONS]]></label>
            <frontend_model>Magento\Config\Block\System\Config\Form\Fieldset</frontend_model>

            <field id="allowspecific" translate="label comment" type="allowspecific" sortOrder="721" showInDefault="1" showInWebsite="1" showInStore="1">
                <label><![CDATA[Restrict to some countries]]></label>
                <config_path>payment/payzen_paypal/allowspecific</config_path>
                <source_model>Magento\Payment\Model\Config\Source\Allspecificcountries</source_model>
            </field>

            <field id="specificcountry" translate="label comment" type="multiselect" sortOrder="722" showInDefault="1" showInWebsite="1" showInStore="1">
                <label><![CDATA[Authorized countries]]></label>
                <frontend_model>Lyranetwork\Payzen\Block\Adminhtml\System\Config\Form\Field\Multiselect</frontend_model>
                <config_path>payment/payzen_paypal/specificcountry</config_path>
                <source_model>Magento\Directory\Model\Config\Source\Country</source_model>
                <depends>
                    <field id="allowspecific">1</field>
                </depends>
            </field>

            <field id="custgroup_amount_restriction" translate="label comment" sortOrder="723" showInDefault="1" showInWebsite="1" showInStore="1">
                <label><![CDATA[Customer group amount restriction]]></label>
                <comment><![CDATA[Define amount restriction for each customer group.]]></comment>
                <frontend_model>Lyranetwork\Payzen\Block\Adminhtml\System\Config\Form\Field\CustgroupOptions</frontend_model>
                <backend_model>Lyranetwork\Payzen\Model\System\Config\Backend\CustgroupOptions</backend_model>
                <config_path>payment/payzen_paypal/custgroup_amount_restriction</config_path>
            </field>
        </group>

        <group id="payzen_payment_page" translate="label" type="text" sortOrder="73" showInDefault="1" showInWebsite="1" showInStore="1">
            <label><![CDATA[PAYMENT PAGE]]></label>
            <frontend_model>Magento\Config\Block\System\Config\Form\Fieldset</frontend_model>

            <field id="capture_delay" translate="label comment" type="text" sortOrder="731" showInDefault="1" showInWebsite="1" showInStore="1">
                <label><![CDATA[Capture delay]]></label>
                <comment><![CDATA[The number of days before the bank capture. Enter value only if different from PayZen general configuration.]]></comment>
                <config_path>payment/payzen_paypal/capture_delay</config_path>
            </field>

            <field id="validation_mode" translate="label comment" type="select" sortOrder="732" showInDefault="1" showInWebsite="1" showInStore="1">
                <label><![CDATA[Validation mode]]></label>
                <comment><![CDATA[If manual is selected, you will have to confirm payments manually in your PayZen Back Office.]]></comment>
                <source_model>Lyranetwork\Payzen\Model\System\Config\Source\ValidationMode</source_model>
                <config_path>payment/payzen_paypal/validation_mode</config_path>
            </field>
        </group>
    </group>
</include>