<p><b>
    <?php echo $this->getMethod()->getTitle(); ?>

    <?php
    $info = $this->getInfo();
    $option = @unserialize($info->getAdditionalData()); // get chosen payment option if any

    if (stripos($info->getMethod(), 'payzen_multi') === 0) {
        if (! isset($option) || empty($option)) {
            // temporary patch for module versions < 1.3 that use additional_information field
            $option = $info->getAdditionalInformation(Lyra_Payzen_Helper_Payment::MULTI_OPTION);
        }
        if (is_array($option) && ! empty($option)) {
            echo '<br />';
            echo $option['label'] . ' (' . $option['count'] . 'X)';
        }
    } elseif ($info->getMethod() === 'payzen_oney') {
        if (is_array($option) && ! empty($option)) {
            echo '<br />';
            echo $option['label'];
        }
    }
    ?>
</b></p>

<?php
if ($info->getCcTransId()) {
    echo Mage::helper('payzen')->__('Transaction ID') . ' : ' . $info->getCcTransId();
    echo '<br />';

    if ($info->getCcType() == 'MULTI') {
        echo $this->getTransactionInfoHtml(true);
    } else {
        echo Mage::helper('payzen')->__('Payment Mean') . ' : ' . $info->getCcType();
        echo '<br />';

        echo Mage::helper('payzen')->__('3-DS Authentication') . ' : ';
        if ($info->getCcSecureVerify()) {
            echo  Mage::helper('payzen')->__('YES');
            echo '<br />';
            echo Mage::helper('payzen')->__('3-DS Certificate') . ' : ' . $info->getCcSecureVerify();
        } else {
            echo  Mage::helper('payzen')->__('NO');
        }
    }

    echo '<br />';
}